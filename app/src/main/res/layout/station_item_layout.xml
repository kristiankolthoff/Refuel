            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Hier ist der nÃ¤chste Text"/>-->

        <!--</LinearLayout>-->

    </LinearLayout>


</android.support.v7.widget.CardView>